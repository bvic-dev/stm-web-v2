---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { generateLangStaticPaths } from "../../utils/locale";
import StmLogo from "../../assets/logo.svg";
import { Image } from "astro:assets";

export function getStaticPaths() {
  return generateLangStaticPaths();
}

const { lang } = Astro.params;
const translation = await import(`../../i18n/${lang}.json`);
const AppleLogo = (await import(`../../assets/badges/${lang}/ios_badge.svg`))
  .default;
const googleLogo = (
  await import(`../../assets/badges/${lang}/google_badge.png`)
).default;
---

<BaseLayout
  title={translation.home.title}
  description={translation.home.description}
  shouldNoIndex={false}
>
  <div
    class="max-w-3xl w-full mx-auto flex flex-col items-center justify-center py-20 gap-8 px-4 text-center"
  >
    <StmLogo class="h-22 w-22 md:h-32 md:w-32" />
    <p class="text-2xl md:text-3xl font-bold">{translation.home.app}</p>
    <h1 class="text-xl md:text-2xl font-bold">
      {translation.home.h1}
    </h1>
    <h2 class="text-lg md:text-xl">
      {translation.home.h2}
    </h2>
    <div
      class="flex flex-col sm:flex-row items-center justify-center gap-5 sm:gap-10"
    >
      <a
        href={translation.home.appstore_url}
        target="_blank"
        rel="noopener noreferrer"
        class="hover-zoom-sm"
      >
        <AppleLogo height={54} width={170.79} alt={translation.home.download_ios} />
      </a>
      <a
        href={translation.home.playstore_url}
        target="_blank"
        rel="noopener noreferrer"
        class="hover-zoom-sm"
      >
        <Image
          height={54}

          src={googleLogo}
          alt={translation.home.download_android}
        />
      </a>
    </div>
  </div>
</BaseLayout>
