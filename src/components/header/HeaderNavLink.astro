---
const { href, label, currentPath, className = "" } = Astro.props;
const isActive = currentPath === href;
---

<a
  href={href}
  class={`rounded-md px-3 py-2 text-sm font-medium hover:bg-gray-200 ${isActive ? "bg-gray-300" : "bg-gray-100"} ${className}`}
  aria-current={isActive ? "page" : undefined}
>
  {label}
</a>
