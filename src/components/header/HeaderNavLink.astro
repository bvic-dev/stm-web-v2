---
interface Props {
  href: string;
  label: string;
  currentPath: string;
  className?: string;
}

const { href, label, currentPath, className = "" } = Astro.props;
const normalize = (path :string) => path !== "/" ? path.replace(/\/+$/, "") : path;
const isActive = normalize(currentPath) === normalize(href);
---

<a
  href={href}
  class={`btn btn-ghost text-sm font-medium ${isActive ? "bg-base-300" : ""} ${className}`}
  aria-current={isActive ? "page" : undefined}
>
  {label}
</a>
