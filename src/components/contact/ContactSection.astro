---
interface Props {
    title: string;
    description: string;
    buttonText: string;
    buttonLink: string;
    ButtonIcon: any;
    buttonIconClass?: string;
}

const {
    title,
    description,
    buttonText,
    buttonLink,
    ButtonIcon,
    buttonIconClass,
} = Astro.props;
---

<section
    class="bg-base-200 rounded-xl p-8 shadow-lg flex flex-col items-center"
>
    <h2 class="text-lg font-semibold mb-4">{title}</h2>
    <p class="mb-4 text-center">{description}</p>
    <a
        href={buttonLink}
        class="btn btn-primary font-semibold text-sm"
        target="_blank"
        rel="noopener noreferrer"
    >
        <ButtonIcon class={`w-5 h-5 ${buttonIconClass ?? ""}`} />
        {buttonText}
    </a>
</section>
